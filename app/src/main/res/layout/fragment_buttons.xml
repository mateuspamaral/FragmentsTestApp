<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ButtonsFragment"
    android:background="@color/buttonsConstraintBackground">

    <Button
        android:id="@+id/buttonVerde"
        style="@style/FragmentsButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVerde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonVermelho"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonVermelho"
        style="@style/FragmentsButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVermelho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonVerde"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>